#!/bin/sh

ADMIN_SERVER_MEM_ARGS='-Xms2G -Xmx2G -XX:PermSize=512M -XX:MaxPermSize=1G'
SOA_SERVER_MEM_ARGS='-Xms4G -Xmx4G -XX:PermSize=512M -XX:MaxPermSize=1G'
OSB_SERVER_MEM_ARGS='-Xms4G -Xmx4G -XX:PermSize=512M -XX:MaxPermSize=1G'
ADF_SERVER_MEM_ARGS='-Xms4G -Xmx4G -XX:PermSize=512M -XX:MaxPermSize=1G'

if [ "${ADMIN_URL}" = "" ] ; then
     USER_MEM_ARGS="${ADMIN_SERVER_MEM_ARGS}"
     export DERBY_FLAG="false"
else
     case ${SERVER_NAME} in
          soa_*)
               USER_MEM_ARGS="${SOA_SERVER_MEM_ARGS}"
          ;;
          osb_*)
               USER_MEM_ARGS="${OSB_SERVER_MEM_ARGS}"
          ;;
          adf_*)
               USER_MEM_ARGS="${ADF_SERVER_MEM_ARGS}"
          ;;
     esac
fi
export USER_MEM_ARGS
